
{

    "name": "MG",

    "description": "A Modular telegram bot.",

    "repository": "https://github.com/imacekun/pyrotxt",
    "buildpacks":[
        {
            "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
        },
        {
            "url": "https://github.com/amivin/aria2-heroku.git"
        },
        {
            "url": "heroku/python"
        }
    ],
    "keywords": [

       

        "telegram bot",

        "pyrogram"

    ],

    "env": {

        "BOT_TOKEN": {

            "description": "Your Bot token from @Botfather"

        },

        "API_ID": {

            "description": "Your API_ID from https://my.telegram.org/apps"

        },

        "API_HASH": {

            "description": "Your API_HASH from https://my.telegram.org/apps"

         },

         "GROUPS": {

            "description": "Telegram User group ids"

         },
    
         "AUTH_USERS": {

             "description": "id's of the telegram users, who you want to allow for multitasking - downloading multiple links at once! In heroku separate the ids by space. (don't put commas. Only separate each of the id's with space"

             "required": false

        }

    },

    "buildpacks": [

        {

            "url": "heroku/python"

        },
        {
            "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
        },
        {
            "url": "https://github.com/amivin/aria2-heroku.git"
        }

    ]

}
